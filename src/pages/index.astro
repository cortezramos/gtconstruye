---
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import Hero from "../components/Hero.astro";
import ProjectCard from "../components/ProjectCard.astro";

const proyectos = [
  {
    titulo: 'Edificio Residencial "Las Palmeras"',
    imagen: "/images/edificio1.jpg",
    descripcion:
      "Moderno edificio de apartamentos de lujo en una ubicación privilegiada.",
  },
  {
    titulo: 'Complejo Industrial "El Progreso"',
    imagen: "/images/edificio2.jpg",
    descripcion:
      "Espacios funcionales y adaptables para empresas de diversos sectores.",
  },
  // ... más proyectos
];
---

<html lang="es">
  <head>
    <title>Constructora Ejemplo</title>
    <link rel="stylesheet" href="src/styles/global.css" />
  </head>
  <body>
    <Navbar />
    <Hero />

    <section class="proyectos">
      <h2>Nuestros Proyectos</h2>
      <div class="grid">
        {proyectos.map((proyecto) => <ProjectCard proyecto={proyecto} />)}
      </div>
    </section>

    <Footer />
  </body>
</html>
