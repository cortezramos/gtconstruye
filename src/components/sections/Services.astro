---
import SectionTitle from "../ui/SectionTitle.astro";
import ServiceCard from "../ui/ServiceCard.astro";
import Section from "./Section.astro";

import c1 from "../../assets/pics/card-pic1.png";
import c2 from "../../assets/pics/card-pic2.png";
import c3 from "../../assets/pics/card-pic3.png";
import c4 from "../../assets/pics/card-pic4.png";
import c5 from "../../assets/pics/card-pic5.png";
import c6 from "../../assets/pics/card-pic6.png";

const cards = [
  {
    index: 1,
    titleTop: "Construccion",
    titleBottom: "Bajo tu diseño",
    img: c1,
    alt: "SEO",
    link: "https://google.com",
  },
  {
    index: 2,
    titleTop: "Diseño",
    titleBottom: "sobre tu presupuesto",
    img: c2,
    alt: "SEO",
    link: "https://google.com",
  },
  {
    index: 3,
    titleTop: "Rehabilitacion",
    titleBottom: "de construccion",
    img: c3,
    alt: "SEO",
    link: "https://google.com",
  },
  {
    index: 1,
    titleTop: "Reparaciones",
    titleBottom: "de toto tipo de materiales",
    img: c4,
    alt: "SEO",
    link: "https://google.com",
  },
  {
    index: 2,
    titleTop: "Muros",
    titleBottom: "perimetrales",
    img: c5,
    alt: "SEO",
    link: "https://google.com",
  },
  {
    index: 3,
    titleTop: "Innovacion",
    titleBottom: "de tecnicas",
    img: c6,
    alt: "SEO",
    link: "https://google.com",
  },
];

const description =
  "Nuestra empresa desarrolla bajo los los mejores estandares de calidad los siguientes servicios";
---

<Section>
  <div class="mt-[140px] mb-5">
    <SectionTitle sectionTitle="Services" description={description} />
    <div class="grid lg:grid-cols-2 lg:grid-rows-3 gap-10">
      {
        cards.map((card) => (
          <ServiceCard
            index={card.index}
            titleTop={card.titleTop}
            titleBottom={card.titleBottom}
            img={card.img}
            alt={card.alt}
            link={card.link}
          />
        ))
      }
    </div>
  </div>
</Section>
