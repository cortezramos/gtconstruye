---
import { Image } from "astro:assets";
import Card from "../ui/Card.astro";
import Section from "./Section.astro";

const cards = [
  {
    index: 0,
    title:
      "Restauantes, hemos diseñado la mejor solución sobre infraestructura para restaurantes y hoteles.",
    link: "https://google.com",
  },
  {
    index: 1,
    title: "Los mejores materiales para la construcción y las mejores marcas.",
    link: "https://google.com",
  },
  {
    index: 1,
    title:
      "La mejor solución para la construcción de edificios y la mejor marca en el sector.",
    link: "https://google.com",
  },
];

import larrow from "../../assets/icon3.svg";
import SectionTitle from "../ui/SectionTitle.astro";
---

<Section id="cases">
  <SectionTitle
    sectionTitle="Casos de éxito"
    description="Nuestra experiencia nos permite mostrar casos de éxito."
  />
  <div class="flex flex-col lg:flex-row justify-between rounded-[45px] p-1">
    {
      cards.map((card) => (
        <Card>
          <div class="flex p-[60px] h-full bg-dark text-white rounded-[45px] m-[1px]">
            <div class="flex flex-col gap-5">
              <p>{card.title}</p>
              <a href={card.link} class="flex items-center gap-[15px]">
                <span class="text-green">Case Info</span>
                <picture>
                  <Image src={larrow} alt="Arrow pointing up right" />
                </picture>
              </a>
            </div>
          </div>
        </Card>
      ))
    }
  </div>
</Section>
