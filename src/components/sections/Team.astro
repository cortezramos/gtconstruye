---
import SectionTitle from "../ui/SectionTitle.astro";
import TeamCard from "../ui/TeamCard.astro";
import Section from "./Section.astro";

const description =
  "Nuestro equipo esta conformado por expertos en construcción y diseño";

import {
  default as p1,
  default as p2,
  default as p3,
} from "../../assets/pics/profile-pic.png";

const team = [
  {
    pic: p1,
    name: "Juan Perez",
    role: "CEO",
    description: "3+ de experiencia en construcción y diseños integrales.",
    link: "https://linkedin.com",
  },
  {
    pic: p2,
    name: "Maria Juarez",
    role: "CEO",
    description: "3+ de experiencia en construcción y diseños integrales.",
    link: "https://linkedin.com",
  },
  {
    pic: p3,
    name: "Luis Lopez",
    role: "CEO",
    description: "3+ de experiencia en construcción y diseños integrales.",
    link: "https://linkedin.com",
  },
];
---

<Section id="about">
  <div class="mt-[140px]">
    <SectionTitle sectionTitle="Nuestro equipo" description={description} />
    <div
      class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 grid-rows-1 gap-10"
    >
      {
        team.map((member, index) => (
          <TeamCard
            key={index}
            pic={member.pic}
            name={member.name}
            role={member.role}
            description={member.description}
            link={member.link}
          />
        ))
      }
    </div>
    <div class="flex justify-end mt-10">
      <button class="btn-primary">Conoce todo el equipo</button>
    </div>
  </div>
</Section>
